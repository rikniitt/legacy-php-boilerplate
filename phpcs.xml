<?xml version="1.0"?>
<ruleset>

    <rule ref="PSR2">
        <exclude name="PSR2.Classes.ClassDeclaration.CloseBraceAfterBody" />
    </rule>

    <rule ref="Generic.Files.LineEndings">
        <properties>
            <property name="eolChar" value="\n" />
        </properties>
    </rule>

    <rule ref="Generic.WhiteSpace.DisallowTabIndent.TabsUsed" />

    <rule ref="Squiz.Strings.DoubleQuoteUsage.NotRequired"/>

    <rule ref="Squiz.WhiteSpace.ControlStructureSpacing.SpacingAfterClose"/>
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace.EndLine"/>
    <!-- Still allow more than 1 emptylines inside function -->
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace.EmptyLines">
        <severity>0</severity>
    </rule>
    <rule ref="Squiz.WhiteSpace.FunctionSpacing">
        <properties>
            <property name="spacing" value="1" />
        </properties>
    </rule>
    <rule ref="Squiz.WhiteSpace.FunctionSpacing.After" />

    <!-- PHP files should OMIT the closing PHP tag -->
    <rule ref="Zend.Files.ClosingTag"/>

</ruleset>
