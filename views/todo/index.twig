{% extends "layouts/master.twig" %}

{% block title %}Todo list{% endblock %}

{% block content %}
    <div class="row row-centered">
        <div class="col-md-8 col-xs-12 col-centered">
            <h1>List of todos</h1>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <td>#</td>
                        <td>Name</td>
                        <td>Content</td>
                    </tr>
                </thead>
                <tbody>
                    {% for todo in todos %}
                        <tr>

                            <td><a href="{{ requestHelper.url('todo/') }}{{ todo.id }}">{{ todo.id }}</a></td>
                            <td>{{ todo.name }}</td>
                            <td>{{ todo.content }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <a class="btn btn-default" href="{{ requestHelper.url('todo/create') }}">Create</a>
        </div>
    </div>
{% endblock %}
